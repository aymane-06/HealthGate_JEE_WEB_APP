<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cliniquePU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Use TomEE managed DataSource -->
        <jta-data-source>cliniqueDS</jta-data-source>

        <!-- Entity Classes -->
        <class>com.cliniqueDigitaleJEE.model.User</class>
        <class>com.cliniqueDigitaleJEE.model.Admin</class>
        <class>com.cliniqueDigitaleJEE.model.Doctor</class>
        <class>com.cliniqueDigitaleJEE.model.Patient</class>
        <class>com.cliniqueDigitaleJEE.model.STAFF</class>
        <class>com.cliniqueDigitaleJEE.model.Department</class>
        <class>com.cliniqueDigitaleJEE.model.Specialty</class>
        <class>com.cliniqueDigitaleJEE.model.Appointment</class>
        <class>com.cliniqueDigitaleJEE.model.Availability</class>
        <class>com.cliniqueDigitaleJEE.model.MedicalNote</class>

        <properties>
            <!-- Hibernate Settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Auto-create/update tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL in console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Use comments in SQL -->
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>

